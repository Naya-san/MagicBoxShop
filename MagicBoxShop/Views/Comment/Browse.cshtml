@model IEnumerable<MagicBoxShop.Models.Comment>
@{
    Layout = null;
}
@{
    ViewBag.Title = "Комментарии";
}

<h3>Отзывы</h3>
@if(Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div id="comment">
            <div id="author">@item.Name</div>
            <div id="date">@item.DateCreated</div>
            <div id="text">@item.Text</div>
        </div>
    }
}
else
{
     <em> Пока никто не оставил свой отзыв об этом подарке</em>
}

