@{
    Layout = null;
}
@model MagicBoxShop.Models.Comment
@{
    ViewBag.Title = "Добавить комментарий";
}
<script type="text/javascript" src="js/jquery-1.5.2.min.js"></script>
<script type="text/javascript" src="js/jquery.validate.min.js"></script>
@using (Html.BeginForm("Create", "Comment", FormMethod.Post))
{
     if (!User.Identity.IsAuthenticated)
      {
         <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>                

        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
      }
      
    <div class="editor-field">
        
        @Html.TextBoxFor(model => model.Text, new { style = "width: 500px; height:50px", placeholder = "Ваш отзыв ...", textmode="multiline", pattern=@"[A-Za-zА-Яа-я0-9,:._()\s-!\?]+"})
        @Html.ValidationMessageFor(model => model.Text)
    </div>
    <input type="submit" value="Готово" />
}