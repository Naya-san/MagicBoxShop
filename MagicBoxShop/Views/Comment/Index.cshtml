@model IEnumerable<MagicBoxShop.Models.Comment>
@{
    ViewBag.Title = "Отзывы";
}

@helper Truncate(string input, int length)
{
    if (input.Length <= length) {
        @input
    } else {
        @input.Substring(0, length)<text>...</text>
    }
}
@if(Model.Count() > 0) {
<h2>Непроверенные комментарии к товарам</h2>
<table>
    <tr>
        <th>
            Название товара
        </th>
        <th>
            Автор комментария
        </th>
        <th>
            Текст комментария
        </th>
        <th>
            Дата публикации
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                <a href="@Url.Action("Details", "StoreManager", new { id = item.Product.ProductId })" class="mp-back">@Html.DisplayFor(modelItem => item.Product.Name)</a>
            
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Truncate(item.Text, 25)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.ActionLink("Подробнее", "Details", new { id=item.CommentId  }, new {@class = "mp-back"}) |
                @Html.ActionLink("Отметить как проверенный", "Edit", new { id=item.CommentId }, new {@class = "mp-back"}) |
                @Html.ActionLink("Удалить", "Delete", new { id=item.CommentId  }, new {@class = "mp-back"})
            </td>
        </tr>
    }

</table>
}
else
{
    <em>Новых комментариев пока что нет.</em>
}