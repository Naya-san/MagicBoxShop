@model MagicBoxShop.Models.Comment

@{
    ViewBag.Title = "Удаление";
}

<h2>Удаление комментария</h2>

<p>Вы уверены, что хотите удалить коммментарий?</p>
<div id="comment">
    <div id="athor">@Model.Name</div>
    <div id="text">@Model.Text</div>
</div>

@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Удалить" />
    </p>
    <p>
        @Html.ActionLink("Назад", "Index", new {}, new {@class = "mp-back"})
    </p>

}