@model MagicBoxShop.Models.Product

@{
    ViewBag.Title = "Изменение";
}

<h2>Редактирование подарка</h2>

<script src="@Url.Content("~/Scripts/HelpfullFunctions.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "StoreManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
         <div class="editor-label">
            Положение в каталоге:
        </div>
        <div class="editor-field">
            @{ List<string> listN = new List<string>(); }
            @foreach (var c in (List<MagicBoxShop.Models.Category>)Session["categoryList"])
            {
                if (c.Subcategories.Count > 0)
                {
                    <fieldset>
                        <legend>@c.Name</legend>
                        @foreach (var sc in c.Subcategories){
                            if(Model.Subcategories.Contains(sc))
                            {
                                <p><input type="checkbox" checked name="s @sc.SubcategoryId">@sc.Name</p>
                            }
                            else
                            {
                                <p><input type="checkbox" name="s @sc.SubcategoryId">@sc.Name</p>
                            }
                            listN.Add("s " + @sc.SubcategoryId);
                        }
                    </fieldset>
                }
                Session.Add("ListOfTags", listN);
            }
           </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Quantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.ArtUrl)
        </div>

        <div class="editor-field">
            <table id="images"  class = "testTable">                	
                <tr>		
                    <td colspan="2" ><input type="button" name="Button1" value="Добавить изображение" onclick="onPush()" class="m-btn"></td>
                </tr>				
            </table>
        </div>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
    
}
<div>
    @Html.ActionLink("Назад", "Index", new {}, new {@class = "mp-back"})
</div>
