@model MagicBoxShop.Models.Subcategory

@{
    ViewBag.Title = "Подробно";
}

<h2>Подробнее</h2>
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Name):
    </div>
<div class="display-field">
    @Html.DisplayFor(model => model.Name)
</div>
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Question):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Question)
    </div>
    
    <div class="display-label">
         @Html.DisplayNameFor(model => model.RootCategory):
    </div>
    <div class="display-field">
         <a href="@Url.Action("Details", "Category", new { id = Model.RootCategory.CategoryId })" class="mp-back"> @Html.DisplayFor(model => model.RootCategory.Name)</a>
    </div>
     <div class="display-label">
         Содержит товаров:
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Products.Count)
